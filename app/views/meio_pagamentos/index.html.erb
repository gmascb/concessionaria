<div class="header">
<h1>Meios de Pagamentos</h1>
</div>
<table>
  <thead>
    <%= stylesheet_link_tag  'scaffolds', media: 'all', 'data-turbolinks-track' => true %>
    <p id="notice"><%= notice %></p>
    <tr>
      <th>Numparcelas</th>
      <th>Tipo</th>
      <th>Descricao</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @meio_pagamentos.each do |meio_pagamento| %>
      <tr>
        <td><%= meio_pagamento.numparcelas %></td>
        <td><%= meio_pagamento.tipo %></td>
        <td><%= meio_pagamento.descricao %></td>
        <td><%= link_to 'Show', meio_pagamento %></td>
        <td><%= link_to 'Edit', edit_meio_pagamento_path(meio_pagamento) %></td>
        <td><%= link_to 'Destroy', meio_pagamento, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Meio pagamento', new_meio_pagamento_path %>
