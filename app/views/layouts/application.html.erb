<!DOCTYPE html>
<html>
<head>
  <title>Benaia Motors</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  
  <div class="user_header">
    <%if current_user %>
      <%= link_to "Home", page_index_path %>
      <%= link_to "UsuÃ¡rio", users_path %>
      <%= link_to "Locais", locals_path %>
      <%= link_to "Carros", cars_path %>
      <%= link_to "Clientes", customers_path %>
      <%= link_to "Meio Pagamento", meio_pagamentos_path %>
      <%= link_to "Vendedores", vendedors_path %>
      <%= link_to "Banco", bancos_path %>
