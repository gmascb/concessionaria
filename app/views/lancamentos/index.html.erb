<table>
  <thead>
    <p id="notice"><%= notice %></p>
    <%= stylesheet_link_tag  'scaffolds', media: 'all', 'data-turbolinks-track' => true %>
    <tr>
      <th>Status</th>
      <th>Ficha</th>
      <th>Customer</th>
      <th>Dtvencimento</th>
      <th>Dtemissao</th>
      <th>Dtpagamento</th>
      <th>Historico</th>
      <th>Valor</th>
      <th>Valorpago</th>
      <th>Acrescimo</th>
      <th>Desconto</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @lancamentos.each do |lancamento| %>
      <tr>
        <td><%= lancamento.status %></td>
        <td><%= lancamento.Ficha %></td>
